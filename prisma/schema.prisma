generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Customer {
  id          Int      @id @default(autoincrement())
  fname       String
  lname       String
  phone       String
  email       String
  address     String
  birth       DateTime?
  nationality String?
  occupation  String?
  advisor     String?
  income      Int?
  networth       Float?
  openingAccount Int?
  accountType    String?
  risk           Int?
  experience     String?
  purpose        String?
  accountBefore  String?
  beneficiary    String?
  bank           String?
  signature      String?
  sigdate        DateTime?
}
